<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- FLASHLIGHT permission is deprecated on many API levels but kept for broader OEM support -->
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <!-- Declare camera features as optional to satisfy lint/ChromeOS requirements -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.OceanProfessional"
        tools:targetApi="m">
        <activity
            android:name="org.example.app.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.example.app.AboutActivity"
            android:exported="false"
            android:parentActivityName="org.example.app.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.example.app.MainActivity"/>
        </activity>

        <activity
            android:name="org.example.app.PrivacyActivity"
            android:exported="false"
            android:parentActivityName="org.example.app.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.example.app.MainActivity"/>
        </activity>

        <activity
            android:name="org.example.app.LicensesActivity"
            android:exported="false"
            android:parentActivityName="org.example.app.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.example.app.MainActivity"/>
        </activity>

        <activity
            android:name="org.example.app.SettingsActivity"
            android:exported="false"
            android:parentActivityName="org.example.app.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.example.app.MainActivity"/>
        </activity>
    </application>
</manifest>
