<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_surface">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ocean_surface"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@color/ocean_text"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section: Preferences -->
    <TextView
        android:id="@+id/prefsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/settings_section_preferences"
        android:textStyle="bold"
        android:textColor="@color/ocean_text"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Keep Screen On Row -->
    <LinearLayout
        android:id="@+id/rowKeepScreenOn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@color/ocean_surface"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/prefsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelKeepScreenOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_keep_screen_on"
                android:textColor="@color/ocean_text"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/summaryKeepScreenOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_keep_screen_on_summary"
                android:textColor="#99333333"
                android:textSize="12sp"/>
        </LinearLayout>

        <Switch
            android:id="@+id/switchKeepScreenOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/dividerKeep"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1A000000"
        app:layout_constraintTop_toBottomOf="@id/rowKeepScreenOn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Haptic Row -->
    <LinearLayout
        android:id="@+id/rowHaptic"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:background="@color/ocean_surface"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/dividerKeep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelHaptic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_haptic_feedback"
                android:textColor="@color/ocean_text"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/summaryHaptic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_haptic_feedback_summary"
                android:textColor="#99333333"
                android:textSize="12sp"/>
        </LinearLayout>

        <Switch
            android:id="@+id/switchHaptic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Section: Information -->
    <TextView
        android:id="@+id/infoHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/settings_section_info"
        android:textStyle="bold"
        android:textColor="@color/ocean_text"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/rowHaptic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/aboutRow"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/about_title"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/ocean_surface"
        android:textColor="@color/ocean_text"
        app:layout_constraintTop_toBottomOf="@id/infoHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/dividerInfo1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1A000000"
        app:layout_constraintTop_toBottomOf="@id/aboutRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/privacyRow"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/privacy_title"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/ocean_text"
        android:background="@color/ocean_surface"
        app:layout_constraintTop_toBottomOf="@id/dividerInfo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/dividerInfo2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1A000000"
        app:layout_constraintTop_toBottomOf="@id/privacyRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/licensesRow"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/licenses_title"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/ocean_text"
        android:background="@color/ocean_surface"
        app:layout_constraintTop_toBottomOf="@id/dividerInfo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
